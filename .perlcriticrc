severity  = 4
verbose   = [%p] %m at %f:%l near '%r'.  (Severity: %s)\n

only = 1

criticism-fatal = 1
color     = 1

[Variables::ProhibitUnusedVariables]
severity = 5

[Variables::ProhibitUnusedVarsStricter]
allow_unused_subroutine_arguments = 1
allow_if_computed_by = stat unpack mock Scope::Guard Test::TP

[TestingAndDebugging::RequireUseStrict]
equivalent_modules = common::sense

[TestingAndDebugging::RequireUseWarnings]
equivalent_modules = common::sense

[Moose::RequireMakeImmutable]
equivalent_modules = Mouse
severity = 4

[Moose::RequireCleanNamespace]
modules = Mouse
severity = 3

[Moose::ProhibitDESTROYMethod]
