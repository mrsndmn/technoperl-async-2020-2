severity = 4

[Tics::ProhibitUseBase]
servety = 4

[Subroutines::ProhibitManyArgs]
skip_object = 1
max_arguments = 6

[Variables::ProhibitUnusedVarsStricter]
severity = 5

[Modules::RequireFilenameMatchesPackage]
